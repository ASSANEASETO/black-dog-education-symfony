{% extends 'base.html.twig' %}

{% block title %}
	{{ 'Tarifs Educateur canin à Niort 79000' }}
{% endblock %}

{% block body %}
	<div class="container-fluid bg-dark py-5">
		<div class="container">
			<div class="section-title bg-white text-center">
				<h1 class="display-5 mb-5  ">{{ 'Mes tarifs' }}</h1>
				<p class="display-6 mb-5  ">{{ 'Les différentes prestations.' }}</p>
				<h5 class="display-6 mb-5 text-primary  ">{{ 'FRAIS DE DEPLACEMENT GRATUIT' }}</h5>
			</div>
			{% for priceList in priceLists|sort((a, b) => a.id <=> b.id) %}
				<!-- Section pour les IDs impairs -->
				{% if priceList.id is odd %}
					<div class="row g-4 my-2">
						<div class="col-lg-12">
							<div class="price-list-item bg-light border-5 border-end border-primary rounded p-4">
								<div class="row align-items-center">
									<div class="col-lg-6 my-2">
										<div class="price-list-content">
											<h3 class="text-decoration-underline  text-center">{{priceList.title}}</h3>
											<h6 class="text-start">{{priceList.summury}}</h6>
											<p class="text-start">{{priceList.description}}</p>
											<div class="text-center">
												<a href="" class="btn btn-lg btn-primary rounded-pill py-md-3 px-md-5">{{ priceList.price }}€</a>
											</div>
										</div>
									</div>
									<div class="col-lg-6 my-2">
										<div class="price-list-img d-flex align-items-center justify-content-center rounded">
											{% if priceList.imageName %}
											<img src="{{ vich_uploader_asset(priceList, 'imageFile') }}" class="img-fluid rounded" alt="Educateur canin Niort">
											{% endif %}
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% else %}
				<!-- Section pour les IDs pairs -->
				{# {% if priceList.id is even %} #}
					<div class="row g-4 my-2">
						<div class="col-lg-12">
							<div class="price-list-item bg-light border-5 border-start border-primary rounded p-4">
								<div class="row align-items-center">
									<div class="col-lg-6 my-2">
										<div class="price-list-img d-flex align-items-center justify-content-center rounded">
											{% if priceList.imageName %}
											<img src="{{ vich_uploader_asset(priceList, 'imageFile') }}" class="img-fluid rounded" alt="Educateur canin Niort">
											{% endif %}
										</div>
									</div>
									<div class="col-lg-6 my-2">
										<div class="price-list-content">
											<h3 class="text-decoration-underline text-center">{{priceList.title}}</h3>
											<h6 class="text-start">{{priceList.summury}}</h6>
											<p class="text-start">{{priceList.description}}</p>											
											<div class="text-center">
												<a href="" class="btn btn-lg btn-primary rounded-pill py-md-3 px-md-5">{{ priceList.price }}€</a>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>
	</div>
{% endblock %}
