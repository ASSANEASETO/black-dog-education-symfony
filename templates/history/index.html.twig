{% extends 'base.html.twig' %}

{% block title  "Mon histoire, Educateur canin Ã  Niort 79000" %}

{% block body %}
	<!-- Page Header Start -->
	<div class="container-fluid page-header py-5 ">
		<div class="container py-5">
			<h1 class="display-3 text-white mb-3 animated slideInDown">{{ 'Black Dog Education'|title }}</h1>
			<nav aria-label="breadcrumb animated slideInDown">
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a class="text-white" href="{{ path('app_index') }}">{{ 'Accueil' }}</a>
					</li>
					<li class="breadcrumb-item">
						<a class="text-white" href="{{ path('app_contact') }}">{{ 'Me contacter' }}</a>
					</li>
					<li class="breadcrumb-item text-white active" aria-current="page">{{ history.title }}</li>
				</ol>
			</nav>
		</div>
	</div>
	<!-- Page Header End -->
	<div class="container-fluid bg-light overflow-hidden my-0 px-lg-0 pt-3">
		<div class="container about px-lg-0">
			<div class="row g-0 mx-lg-0">
				<div class="col-lg-6 ps-lg-0" style="min-height: 400px;">
					<div class="position-relative d-flex justify-content-center align-items-center" style="height: 100%;">
						{% if history.imageName %}
							<img class="img-fluid w-75 h-auto" src="{{ vich_uploader_asset (history, 'imageFile') }}" style="object-fit: cover;" alt="Education chien Niort">
						{% endif %}
					</div>
				</div>
				<div class="col-lg-6 about-text py-5 wow fadeIn" data-wow-delay="0.5s">
					<div class="p-lg-5 pe-lg-0">
						<div class="section-title text-start">
							<h1 class="display-5 mb-4">{{ history.title }}</h1>
						</div>
						<p class=" mb-4 pb-2 lh-lg">{{ history.summury }}</p>
						<p class=" mb-4 pb-2 lh-lg">{{ history.content }}</p>
						<a href="{{ path('app_contact') }}" class="read-btn btn-primary py-3 px-5">{{'Me contacter'}}</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- About End -->
{% endblock %}
